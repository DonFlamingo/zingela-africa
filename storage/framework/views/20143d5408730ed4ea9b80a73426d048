                    <span class="input-group-addon"><a href="javascript:" class="delete-item"><span aria-hidden="true">×</span></a></span>
                </div>
            </div>
        <?php endforeach; ?>
        <div class="form-group empty-input-add-new" <?php if(count($groups) >= 41): ?>style="display: none;"<?php endif; ?>>
            <div class="input-group">
                <?php echo Form::text('add_group[]', null, ['class' => 'form-control', 'placeholder' => trans('validation.attributes.name')]); ?>

