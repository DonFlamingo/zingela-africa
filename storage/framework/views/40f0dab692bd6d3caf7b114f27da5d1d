<?php $__env->startSection('content'); ?>
    <?php foreach($devices as $device): ?>
        <div class="panel panel-default">
            <div class="panel-heading">
                <?php echo e(rtl(trans('front.report_type'), $data)); ?>: <?php echo e(rtl($types[$data['type']], $data)); ?>

            </div>
            <div class="panel-body">
                <table class="table" style="margin-bottom: 0px">
                    <tbody>
                    <tr>
                        <td><strong><?php echo e(rtl(trans('validation.attributes.device_id'), $data)); ?>:</strong></td>
                        <td><?php echo e(rtl($device['name'], $data)); ?></td>
                        <th>&nbsp;</th>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <th><?php echo rtl(trans('front.time_period'), $data); ?>:</th>
                        <td><?php echo e($data['date_from']); ?> - <?php echo e($data['date_to']); ?></td>
                        <th>&nbsp;</th>
                        <td>&nbsp;</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-body no-padding">
                <table class="table table-striped table-speed" style="margin-bottom: 0px">
                    <thead>
                        <tr>
                            <th><?php echo e(rtl(trans('front.time'), $data)); ?></th>
                            <th><?php echo e(rtl(trans('front.event'), $data)); ?></th>
                            <th><?php echo e(rtl(trans('front.position'), $data)); ?></th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php if(!isset($items[$device['id']]) || empty($items[$device['id']])): ?>
                            <tr>
                                <td colspan="20"><?php echo e(rtl(trans('front.nothing_found_request'), $data)); ?></td>
                            </tr>
                        <?php else: ?>
                            <?php
                            $total = [];
                            $device_items = $items[$device['id']];
                            ?>
                            <?php foreach($device_items as $item): ?>
                                <?php
                                $message = $item['message'].(isset($item['geofence']['name']) ? ' ('.$item['geofence']['name'].')' : '');
                                if (isset($total[$message]))
                                    $total[$message]++;
                                else
                                    $total[$message] = 1;
                                ?>
                                <tr class="text_center">
                                    <td><?php echo e($item['time']); ?></td>
                                    <td><?php echo e(rtl($message, $data)); ?></td>
                                    <td><a href="http://maps.google.com/maps?q=<?php echo e($item['latitude']); ?>,<?php echo e($item['longitude']); ?>&t=m" target="_blank"><?php echo e($item['latitude']); ?> &deg;, <?php echo e($item['longitude']); ?> &deg;</a>
                                        <?php if(!empty($item['address'])): ?>
                                            - <?php echo e(rtl($item['address'], $data)); ?>

                                        <?php endif; ?>
                                    </td>
                                </tr>
                            <?php endforeach; ?>
                        <?php endif; ?>
                    </tbody>
                </table>
            </div>
            <?php if(isset($items[$device['id']]) && !empty($items[$device['id']])): ?>
            <div class="panel-body">
                <table class="table">
                    <tbody>
                    <?php foreach($total as $key => $value): ?>
                        <tr>
                            <td><?php echo e(rtl(trans('front.total'), $data)); ?> <?php echo e(rtl($key, $data)); ?>:</td>
                            <td><?php echo e($value); ?></td>
                        </tr>
                    <?php endforeach; ?>
                    </tbody>
                </table>
            </div>
            <?php endif; ?>
        </div>
    <?php endforeach; ?>
<?php $__env->stopSection(); ?>
